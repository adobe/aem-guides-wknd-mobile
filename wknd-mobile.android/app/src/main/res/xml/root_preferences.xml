<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/settings_aem_header">

        <EditTextPreference
            app:key="host"
            app:title="@string/settings_host_title"
            android:defaultValue="http://localhost:4503"
            android:singleLine="true"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="path"
            app:title="@string/settings_path_title"
            android:defaultValue="/content/wknd-mobile/en/api/events.model.json"
            android:singleLine="true"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>


</androidx.preference.PreferenceScreen>
